    "all-in": "npm run format && npm run lint && npm run test:build && npm run test",
    "start": "DEBUG='-nodemon*,*' nodemon -r dotenv/config ./src/app.ts",
    "format": "prettier --write 'src/**/*.{js,ts}'",
