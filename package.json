    "test": "TS_NODE_PROJECT=tsconfig.test.json mocha -r dotenv/config --require ts-node/register/transpile-only --reporter dot --exit test/setup.spec.ts 'test/**/*.spec.ts'",
    "test:build": "rm -rf dist && tsc"
